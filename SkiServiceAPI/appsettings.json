{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console"
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ASPDatabaseLocal;User ID=DBUser;Password=veryStrongPassword;TrustServerCertificate=True;"
  },
  "AllowedHosts": "*",
  "JWT": {
    "Key": "45ccc6f3fbe30adc61dad379b833707b6da1d11ee6f228d24535a7ef81ac46b9857deb91df21a58c", // Long, random secret key (openssl rand -hex 40)
    "Issuer": "SkiServiceManagementAPI",
    "Audience": "SkiServiceManagementAPI"
  }
}
